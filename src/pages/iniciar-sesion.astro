---
import BaseLayout from "../layouts/baseLayout.astro";
import Toast from "../components/toast/toast.astro";
import "../styles/main.css";
---

<BaseLayout
  title="Iniciar Sesión"
  description="Autentícate en CuCoders y desbloquea tu perfil de desarrollador, crear artículo, publica tus aplicaciones, proyectos y comienza a conectar con la mayor comunidad de programadores cubanos."
>
  <section id="loggin-form" class="bg-gray-50 dark:bg-gray-900 mx-auto">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen md:-mt-10 lg:py-0">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
        <img
          class="w-20 h-20 opacity-90 rounded-full mr-2 dark:invert dark:contrast-200 dark:saturate-0"
          src="/assets/img/cucoders_logo_black.webp"
          alt="logo"
        />
      </a>
      <div
        class="w-full bg-white rounded-lg border dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700"
      >
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Iniciar Sesión
          </h1>
          <div class="space-y-4 md:space-y-6" id="form">
            <div>
              <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                >Tu usuario de Github</label
              >
              <div class="flex">
                <span
                  class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-r-0 border-gray-300 rounded-l-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600"
                >
                  @
                </span>
                <input
                  type="text"
                  id="username"
                  class="rounded-none rounded-r-lg bg-gray-50 border text-gray-900 focus:ring-gray-500 focus:border-gray-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500"
                  placeholder="tuNombreDeUsuario"
                />
              </div>
            </div>

            <button
              id="logginBtn"
              class="text-white disabled:opacity-50 w-full bg-[#24292F] dark:bg-gray-700 hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center flex content-center justify-center items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30 mr-2"
            >
              <svg
                id="spinner-ico"
                aria-hidden="true"
                role="status"
                class="hidden w-4 h-4 mr-2 text-white animate-spin"
                viewBox="0 0 100 101"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
