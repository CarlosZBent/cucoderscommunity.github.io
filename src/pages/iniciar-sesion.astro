                ></path></svg
              >
              Iniciar Sesión</button
            >

            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
              ¿No eres miembro aún? <a
                href="/registro"
                class="ml-2 font-medium text-primary-600 hover:underline dark:text-primary-500"
              >
                Regístrate aquí</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <Toast />
</BaseLayout>

<script>
  import { backend_url } from "../data/conf.json";
  import { showToast } from "../components/toast/toast";
  import { loggingUser } from "../components/helpers/user";
  import { getRemoteFileData } from "../components/helpers/getRemoteFile";

  const logginBtn = document.getElementById("logginBtn");
  logginBtn.addEventListener("click", logginUser, true);

  async function logginUser() {
    const username = document.getElementById("username").value;

    disableInput();
    const isMember = await isCommunityMemeber(username);
    if (!isMember) {
      const alert = `El usuario ${username} no es miembro de la Comunidad. Necesitas registrarte primero para iniciar tu sesión.`;
      showToast(alert, true);
      enableInput();
      return;
    }

    loggingUser(username)
      .then((data) => {
        checkIfProfileExistAndRedirect(username);
      })
      .catch((e) => {
        showToast("Ocurrió un error inesperado. Por favor vuelva a intentarlo más tarde.", true);
        enableInput();
      });
  }

  async function checkIfProfileExistAndRedirect(username) {
    const data = await getRemoteFileData(
      `https://raw.githubusercontent.com/${username}/${username}/main/cucoders_data/profile-data.json`,
      "json"
    );
    if (data) {
      window.location.href = "/";
    } else {
      window.location.href = "/perfil";
    }
  }

  async function isCommunityMemeber(username) {
    const url = backend_url + "api/members/is-member?username=" + username;
    try {
      const response = await fetch(url, { method: "GET" });
      const data = await response.json();
      return data.is_member;
    } catch {
      return false;
    }
  }

  function showForm() {
    (document.getElementById("profile-form") as HTMLInputElement).classList.remove("hidden");
    (document.getElementById("profile-pages") as HTMLInputElement).classList.remove("hidden");
    (document.getElementById("profile-pages") as HTMLInputElement).classList.add("grid");
  }

  function disableInput() {
    (document.getElementById("logginBtn") as HTMLInputElement).setAttribute("disabled", "");
    (document.getElementById("spinner-ico") as HTMLInputElement).classList.remove("hidden");
    (document.getElementById("spinner-ico") as HTMLInputElement).classList.add("inline");
    (document.getElementById("github-ico") as HTMLInputElement).classList.add("hidden");
  }

  function enableInput() {
    (document.getElementById("logginBtn") as HTMLInputElement).removeAttribute("disabled");
    (document.getElementById("spinner-ico") as HTMLInputElement).classList.add("hidden");
    (document.getElementById("spinner-ico") as HTMLInputElement).classList.remove("inline");
    (document.getElementById("github-ico") as HTMLInputElement).classList.remove("hidden");
  }
</script>
