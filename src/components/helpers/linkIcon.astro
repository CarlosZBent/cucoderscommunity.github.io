---
const { url, text, img, target = "_self", id, size = "w-6 h-6", padding = "p-2.5" } = Astro.props;

// this links will be exempted from some dark mode classes. 
// The intention is that the majority of this items, which are social media links, 
// have a different aesthetic than other more specific items like the Telegram Community link. 
let linksWithoutDarkMode = ["Comunidad en Telegram"]
if (linksWithoutDarkMode.includes(Astro.props.text)) {
  // don't apply dark mode classes'
  var classes = "md:inline-block text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm keychainify-checked";
} else {
  // apply dark mode classes
  var classes = "md:inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-900 rounded-lg text-sm keychainify-checked";
}
---

<a
  href={url}
  target={target}
  data-tooltip-target={id}
  class={padding + " " + classes}
>
  <slot />
  <img src={img} class={size + " inline"} alt={text}/>
</a>

<div
  id={id}
  role="tooltip"
  class=" hidden absolute z-10 sm:inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm tooltip opacity-0 invisible"
  style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate(976px, -64px);"
  data-popper-placement="top"
>
  {text}
  <div class="tooltip-arrow" data-popper-arrow="" style="position: absolute; left: 0px; transform: translate(99px, 0px);">
  </div>
</div>
