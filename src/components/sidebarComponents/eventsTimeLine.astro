---
import TimeLineItem from "./timeLineItem.astro";
import { getNextEvents } from "../helpers/getNextEvents";

const events = await getNextEvents();
---

{
  events.length != 0 && (
    <div class="border-solid dark:border-gray-700 border-b-[1px] mb-3 pb-3">
      <div class="font-medium text-gray-800 mb-4">Pr√≥ximos Eventos</div>
      <ol class="relative border-l border-gray-300 dark:border-gray-700">
        {events.map((event) => (
          <TimeLineItem name={event.name} description={event.description} date={event.date} url={"/eventos/" + event.url} />
        ))}
      </ol>
    </div>
  )
}
